<%= form_for @post do |f| %>
    <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :size => 30 %>
    </div>
    <div class="field">
    <%= f.label :price  %>
    <%= f.number_field :price, :size => 10 %>
    </div>
    <div class="field">
    <%= f.label :about  %>
    <%= f.text_area :about, :size => "30x2" %>
    </div>
  
    <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
    </div>
    <%= f.submit "編集する" %>
    <% end %>
    
    <%= link_to "サウナ一覧に戻る", posts_path %>